<Configuration status="WARN">
    <Appenders>
        <Console name="stderr" target="SYSTEM_ERR">
            <PatternLayout pattern="[%d] %p %m (%c)%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="stderr"/>
        </Root>
    </Loggers>
</Configuration>
